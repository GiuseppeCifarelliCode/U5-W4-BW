@model IEnumerable<CuraVet.Models.Tipologia>

@{
    ViewBag.Title = "TipologiaList";
}

<h2>𝐋𝐢𝐬𝐭𝐚 𝐭𝐢𝐩𝐨𝐥𝐨𝐠𝐢𝐞</h2>
@if (ViewBag.Message != null)
{
    <div class="alert alert-primary">
        @ViewBag.Message
    </div>
}
<div class="d-flex gap-3">
    <p>
        @Html.ActionLink("Indietro", "AnimaliList")
    </p>
    <p>
        @Html.ActionLink("Aggiungi Tipologia", "AddTipologia")
    </p>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.ActionLink("Elimina", "DeleteTipologia", new { id = item.IdTipologia })
            </td>
        </tr>
    }

</table>
