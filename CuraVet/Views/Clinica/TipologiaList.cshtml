@model IEnumerable<CuraVet.Models.Tipologia>

@{
    ViewBag.Title = "TipologiaList";
}

<h2>TipologiaList</h2>
@if (ViewBag.Message != null)
{
<div class="alert alert-primary">
    @ViewBag.Message
</div>
}

<p>
    @Html.ActionLink("Aggiungi Tipologia", "AddTipologia")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.ActionLink("Elimina", "DeleteTipologia", new { id=item.IdTipologia })
        </td>
    </tr>
}

</table>
