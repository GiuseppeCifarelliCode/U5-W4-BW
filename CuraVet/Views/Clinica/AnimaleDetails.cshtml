        <dd>
            @Html.DisplayFor(model => model.Foto)
        </dd>

    </dl>
    <div>
        <h2>Storico degli esami:</h2>
        @Html.ActionLink("Aggiungi Visita", "AddVisita", new { id = Model.IdAnimale })
        @foreach (CuraVet.Models.Visita v in Model.Visita)
        {
            <div class="border border-1 p-3">
                <a href="/Clinica/ModifyVisita/@v.IdVisita" class="btn btn-primary">Modifica</a>
                <p><strong>Tipo di esame:</strong>@v.TipoEsame</p>
                <p><strong>Descrizione:</strong>@v.Descrizione</p>
                <p><strong>Data:</strong>@v.DataVisita.ToShortDateString()</p>
            </div>
        }
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.IdAnimale }) |
    @Html.ActionLink("Back to List", "Index")
</p>
