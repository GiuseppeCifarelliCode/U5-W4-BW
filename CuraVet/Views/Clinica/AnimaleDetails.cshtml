@model CuraVet.Models.Animale

@{
    ViewBag.Title = "AnimaleDetails";
}

<div class="row">
    <div class="col-12 text-center my-3">
        <h2>Storico degli esami:</h2>
    </div>
    <div class="col-12">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                @if (Model.Foto != null)
                {<div class="col-md-4">
                        <img src="~/Content/assets/@Model.Foto"
                             alt="Trendy Pants and Shoes"
                             class="img-fluid rounded-start" />
                    </div>}
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">Dettagli paziente</h5>
                        <p class="card-text">Numero Microchip: <strong>@Model.Microchip</strong></p>
                        <p class="card-text">Data di registrazione: <strong>@String.Format("{0:dd/MM/yyyy}", Model.DataRegistrazione)</strong></p>
                        <p class="card-text">
                                @Html.ActionLink("Aggiungi Visita", "AddVisita", new { id = Model.IdAnimale }, new { @class = "btn btn-custom" })
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @foreach (CuraVet.Models.Visita v in Model.Visita)
    {
        <div class="col col-lg-6">
            <div class="card my-3">
                <div class="card-header">
                    <p><strong>Data:</strong>@v.DataVisita.ToShortDateString()</p>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        @if (v.Attiva)
                        {
                            <p><span class="badge rounded-pill badge-success">Attiva</span></p>
                        }
                        else
                        {
                            <p><span class="badge rounded-pill badge-danger">Non Attiva</span></p>
                        }
                        <div><a href="/Clinica/ModifyVisita/@v.IdVisita" class="btn btn-custom">Modifica</a></div>

                    </div>
                    <div class="card-body">
                        <p><strong>Tipo di esame:</strong>@v.TipoEsame</p>
                        <p><strong>Descrizione:</strong>@v.Descrizione</p>

                    </div>
                </div>
            </div>
        </div>
    }
</div>

