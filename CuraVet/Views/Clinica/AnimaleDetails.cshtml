@model CuraVet.Models.Animale

@{
    ViewBag.Title = "AnimaleDetails";
}



<div>
    <h4>𝐃𝐞𝐭𝐭𝐚𝐠𝐥𝐢 𝐝𝐞𝐥𝐥'𝐚𝐧𝐢𝐦𝐚𝐥𝐞</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome del propietario
        </dt>

        <dd>
            @if (Model.Cliente!=null)
            {
                @Html.DisplayFor(model => model.Cliente.Nome)
            }
            else
            {
                <p>N.D</p>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tipologia.Tipo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tipologia.Tipo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataRegistrazione)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataRegistrazione)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Razza)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Razza)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Colore)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Colore)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataNascita)
        </dt>

